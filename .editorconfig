# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = false
trim_trailing_whitespace = true

[Makefile]
indent_style = tab
insert_final_newline = false

[*.{json}]
indent_size = 2

[*.{md,toml,yaml,yml}]
indent_size = 2
insert_final_newline = true
x-soft-wrap-text = true

[*.{py,pyi}]
insert_final_newline = true