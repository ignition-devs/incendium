# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true

[Makefile]
indent_style = tab

[*.{md,toml,yaml,yml}]
indent_style = space
indent_size = 2
insert_final_newline = true
x-soft-wrap-text = true

[*.py]
charset = utf-8
indent_style = space
insert_final_newline = true
indent_size = 4