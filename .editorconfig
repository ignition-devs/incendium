# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true

[Makefile]
indent_size = 4
indent_style = tab
insert_final_newline = false

[*.{json,md,toml,yaml,yml}]
indent_size = 2
indent_style = space
insert_final_newline = true

[*.{ini,py,pyi}]
indent_size = 4
indent_style = space
insert_final_newline = true